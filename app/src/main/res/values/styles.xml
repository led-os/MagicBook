<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/white</item>
        <item name="colorPrimaryDark">@color/white</item>
        <item name="colorAccent">@color/white</item>
        <item name="colorControlActivated">@color/blue</item>
    </style>

    <style name="MineSplashTheme" parent="AppTheme">
        <item name="android:windowBackground">@mipmap/bg</item>
        <item name="android:windowFullscreen">true</item>
    </style>


    <style name="ToolbarTextColorStyle" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textColor">@color/blue</item>
        <item name="android:textSize">@dimen/toolbar_text_size</item>
    </style>
</resources>
